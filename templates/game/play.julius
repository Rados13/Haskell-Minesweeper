
$ (function(){
    var elements = document.getElementsByClassName("field");

    var listenerFunction = function () {
        this.style.backgroundColor = "red";
        this.addEventListener('click', e => {e.preventDefault();console.log("Blocked");},false);
    }

    for(var i=0;i<elements.length;i++){
        elements[i].addEventListener('contextmenu', listenerFunction,false);
    };
})